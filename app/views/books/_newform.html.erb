<%= form_for(book) do |f| %>

	<% if book.errors.any? %>
	<b><%= book.errors.count %> errors prohibited this book from being saved:</b>
<% book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
<% end %>
	<div class="field row">
	<div class="col-xs-12">
		<%= f.label :title %>
		<%= f.text_field :title, class: "book_title" %>
	</div>
	</div>

	<div class="field row">
	<div class="col-xs-12">
		<%= f.label :body %>
		<%= f.text_area :body, class: "book_body" %>
	</div>
	</div>
	<div class="actions row">
	<div class="col-xs-12">
		<%= f.submit class: "btn btn-primary" %>
	</div>
	</div>
<% end %>